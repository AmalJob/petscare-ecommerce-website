<div class="wrapper bg-white mt-sm-5">
    <form action="/editUserProfile" method="post">
    <h4 class="pb-4 border-bottom">Account settings</h4>
    <div class="d-flex align-items-start py-3 border-bottom"> 
        <div class="pl-sm-4 pl-2" id="img-section"> <b>Profile Photo</b>
            <p>Accepted file type .png. Less than 1MB</p> <button class="btn button border"><b>Upload</b></button>
        </div>
    </div>
    <div class="py-2">
        <div class="row py-2">
            <div class="col-md-6"> <label for="firstname">Name</label> <input type="text" class="bg-light form-control" value="{{user.Name}}" name="Name" placeholder="{{user.Name}}"> </div>
            <input type="text" name="userId" value="{{user._id}}"  hidden >
          
        </div>
        <div class="row py-2">
            <div class="col-md-6"> <label for="email">Email Address</label> <input type="text" name="Email" class="bg-light form-control" value="{{user.Email}}" placeholder="{{user.Email}}"> </div>
            <div class="col-md-6 pt-md-0 pt-3"> <label for="phone">Phone Number</label> <input type="tel" name="phone" class="bg-light form-control" value="{{user.phone}}" placeholder="{{user.phone}}"> </div>
        </div>
        <div class="py-2">
        {{!-- <div class="row py-2">
            <div class="col-md-6"> <label for="firstname">Password</label> <input type="text" class="bg-light form-control" placeholder="*****"> </div>
            <div class="col-md-6 pt-md-0 pt-3"> <label for="lastname">Confirm Password</label> <input type="text" class="bg-light form-control" placeholder="*****"> </div>
        </div> --}}
        <div class="py-3 pb-4 border-bottom"> <button class="btn btn-primary mr-3">Save Changes</button> <button class="btn border button">Cancel</button> </div>
       </form>
       
       <form action="/changePassword" method="post">
       {{#if errorMsg}}
       <p class="text-danger">{{errorMsg}}</p>
       {{/if}}
            <div class="row py-2">
            <div class="col-md-6"> <label for="firstname">Password</label> <input type="text" class="bg-light form-control" name="Password"  placeholder="*****"> </div>
            <div class="col-md-6 pt-md-0 pt-3"> <label for="lastname">New Password</label> <input type="text" class="bg-light form-control" name="newPassword"  placeholder="*****"> </div>
            <input type="text" name="userId" value="{{user._id}}" hidden>
        </div>
        <div class="py-3 pb-4 border-bottom"> <button class="btn btn-primary mr-3">Update Password</button> <button class="btn border button">Cancel</button> </div>
       </form>
       
        <div class="d-sm-flex align-items-center pt-3" id="deactivate">
            <div> <b>Deactivate your account</b>
                <p>Details about your company account and password</p>
            </div>
            <div class="ml-auto"> <button class="btn danger">Deactivate</button> </div>
        </div>
    </div>
    
</div>

